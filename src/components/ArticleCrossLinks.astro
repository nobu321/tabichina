---
import { getCollection } from 'astro:content';

export interface Props {
  slugs: string[];
  layout?: 'single' | 'double';
}

const { slugs, layout = slugs.length === 2 ? 'double' : 'single' } = Astro.props;

// 記事情報を自動取得
const articles = await getCollection('articles');
const links = slugs.map(slug => {
  const article = articles.find(article => article.slug === slug);
  if (!article) {
    throw new Error(`Article with slug "${slug}" not found`);
  }
  
  const displayCategory = article.data.category === 'info' ? '基礎情報' : 
                         article.data.category === 'setup' ? '準備・設定' : 
                         article.data.category === 'howto' ? '使い方' : '関連記事';
  
  return {
    title: article.data.title,
    slug: slug,
    category: displayCategory
  };
});
---

<div class={`crosslinks-container ${layout === 'double' ? 'two-links-compact' : ''}`}>
  {links.map((link) => (
    <a href={`/${link.slug}`} class="article-crosslink">
      <div class="crosslink-content">
        <div class="crosslink-label">{link.category}</div>
        <div class="crosslink-title">{link.title}</div>
      </div>
      <div class="crosslink-arrow">→</div>
    </a>
  ))}
</div>

<style>
  .crosslinks-container {
    margin: 20px 0;
  }

  .article-crosslink {
    display: flex;
    align-items: center;
    background: #FFF7ED;
    border: 1px solid #FED7AA;
    border-radius: 8px;
    padding: 12px 16px;
    margin: 20px 0;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .article-crosslink:hover {
    border-color: #EA580C;
    box-shadow: 0 2px 4px rgba(234, 88, 12, 0.15);
    transform: translateX(2px);
    background: #FFEDD5;
  }

  .crosslink-content {
    flex: 1;
  }

  .crosslink-label {
    font-size: 0.7rem;
    color: #EA580C;
    margin-bottom: 2px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  .crosslink-title {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-primary, #374151);
    line-height: 1.3;
  }

  .crosslink-arrow {
    font-size: 1.2rem;
    color: #EA580C;
    margin-left: 12px;
    transition: transform 0.2s ease;
  }

  .article-crosslink:hover .crosslink-arrow {
    transform: translateX(3px);
  }

  /* 2つのリンクを横並びで表示するパターン */
  .two-links-compact {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin: 20px 0;
  }

  .two-links-compact .article-crosslink {
    margin: 0;
  }

  .two-links-compact .crosslink-title {
    font-size: 0.85rem !important;
  }

  .two-links-compact .crosslink-arrow {
    font-size: 1rem !important;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .article-crosslink {
      padding: 10px 14px;
    }

    .crosslink-title {
      font-size: 0.85rem !important;
      line-height: 1.25 !important;
    }

    .crosslink-label {
      font-size: 0.65rem !important;
    }

    .crosslink-arrow {
      font-size: 1rem !important;
      margin-left: 8px !important;
    }

    .two-links-compact {
      grid-template-columns: 1fr;
      gap: 8px;
    }
  }

  @media (max-width: 480px) {
    .article-crosslink {
      padding: 8px 12px;
    }

    .crosslink-title {
      font-size: 0.8rem !important;
    }

    .crosslink-label {
      font-size: 0.6rem !important;
    }
  }
</style>